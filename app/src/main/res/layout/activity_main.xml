<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.rx.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main"
        android:id="@+id/include" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="485dp"
        app:backgroundTint="?attr/actionModeSplitBackground"
        app:srcCompat="@android:drawable/ic_input_add" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="?attr/actionModeSplitBackground"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="63dp"
        android:background="@mipmap/rx_custom" />

    <Button
        android:id="@+id/morning"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:onClick="gotoMorning"
        android:background="@mipmap/morn_custom" />

    <Button
        android:id="@+id/lunch"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="80dp"
        android:onClick="gotoAfternoon"
        android:background="@mipmap/after_custom"
         />

    <Button
        android:id="@+id/evening"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:onClick="gotoEvening"
        android:background="@mipmap/eve_custom" />

    <Button
        android:id="@+id/dinner"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="280dp"
        android:onClick="gotoDinner"
        android:background="@mipmap/dine_custom" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="12dp"
        android:text="Prescription"
        android:textColor="@android:color/background_light"
        android:textSize="30dp" />
</android.support.design.widget.CoordinatorLayout>
