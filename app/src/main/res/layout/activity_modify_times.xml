<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.rx.ModifyTimes">

    <EditText
        android:id="@+id/mornbf"
        style="?attr/editTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:inputType="time"
        android:hint="Morning"
        android:visibility="visible" />

    <EditText
        android:id="@+id/aftebf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:inputType="time"
        android:hint="Afternoon"
        android:visibility="visible" />

    <EditText
        android:id="@+id/evenbf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="Evening"
        android:inputType="time"
        android:visibility="visible" />

    <EditText
        android:id="@+id/nighbf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="175dp"
        android:hint="Night"
        android:ems="10"
        android:inputType="time"
        android:visibility="visible" />

    <EditText
        android:id="@+id/mornaf"
        style="?attr/editTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="265dp"
        android:ems="10"
        android:hint="Morning"
        android:inputType="time"
        android:visibility="visible" />

    <EditText
        android:id="@+id/afteaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="305dp"
        android:ems="10"
        android:inputType="time"
        android:hint="Afternoon"
        android:visibility="visible" />

    <EditText
        android:id="@+id/evenaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="345dp"
        android:ems="10"
        android:hint="Evening"
        android:inputType="time"
        android:visibility="visible" />

    <EditText
        android:id="@+id/nighaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="385dp"
        android:ems="10"
        android:hint="Night"
        android:inputType="time"
        android:visibility="visible" />


    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:background="@color/colorPrimary"
        android:onClick="gotoMain"
        android:text="Cancel"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="460dp"
        android:onClick="gotoMain"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before Food"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After Food"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="225dp"
        android:textSize="24sp"
        android:textStyle="bold" />


</android.support.design.widget.CoordinatorLayout>

